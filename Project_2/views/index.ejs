<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        /* Keyframes for moving gradient animation */
        @keyframes move {
            0% {
                transform: translateX(0) translateY(0);
            }
            50% {
                transform: translateX(50px) translateY(-50px);
            }
            100% {
                transform: translateX(0) translateY(0);
            }
        }

        /* Vibrant moving gradient shapes */
        .moving {
            animation: move 8s ease-in-out infinite alternate;
        }

        /* Additional delay for animation timing */
        .animation-delay-1 {
            animation-delay: 2s;
        }

        .animation-delay-2 {
            animation-delay: 4s;
        }
    </style>
</head>

<body class="bg-gray-900 relative overflow-hidden h-screen flex justify-center items-center">
    <!-- Vibrant Animated Background Shapes -->
    <div class="absolute top-10 left-10 w-40 h-40 bg-gradient-to-r from-purple-500 via-pink-500 to-red-500 opacity-40 rounded-full moving"></div>
    <div class="absolute bottom-20 right-20 w-32 h-32 bg-gradient-to-r from-yellow-400 via-orange-500 to-red-500 opacity-40 rounded-full moving animation-delay-1"></div>
    <div class="absolute top-1/2 left-1/3 w-44 h-44 bg-gradient-to-r from-blue-400 via-green-400 to-teal-500 opacity-40 rounded-full moving animation-delay-2"></div>

    <!-- Main Container -->
    <div class="relative z-10 bg-gray-800 p-8 rounded-xl shadow-lg w-full max-w-lg">
        <!-- Title -->
        <h2 class="text-3xl font-bold text-center text-gray-100 mb-8">Create Your Account</h2>

        <!-- Registration Form -->
        <form action="/register" method="POST" class="space-y-6">
            <!-- Name Field -->
            <div>
                <label for="name" class="block text-sm font-medium text-gray-400">Name</label>
                <input type="text" id="name" name="name" required
                    class="mt-1 w-full px-4 py-3 bg-gray-700 text-gray-100 rounded-lg border-2 border-gray-600 focus:ring-2 focus:ring-blue-500 focus:outline-none transition duration-300">
            </div>

            <!-- Username Field -->
            <div>
                <label for="username" class="block text-sm font-medium text-gray-400">Username</label>
                <input type="text" id="username" name="username" required
                    class="mt-1 w-full px-4 py-3 bg-gray-700 text-gray-100 rounded-lg border-2 border-gray-600 focus:ring-2 focus:ring-blue-500 focus:outline-none transition duration-300">
            </div>

            <!-- Email Field -->
            <div>
                <label for="email" class="block text-sm font-medium text-gray-400">Email</label>
                <input type="email" id="email" name="email" required
                    class="mt-1 w-full px-4 py-3 bg-gray-700 text-gray-100 rounded-lg border-2 border-gray-600 focus:ring-2 focus:ring-blue-500 focus:outline-none transition duration-300">
            </div>

            <!-- Password Field -->
            <div>
                <label for="password" class="block text-sm font-medium text-gray-400">Password</label>
                <input type="password" id="password" name="password" required
                    class="mt-1 w-full px-4 py-3 bg-gray-700 text-gray-100 rounded-lg border-2 border-gray-600 focus:ring-2 focus:ring-blue-500 focus:outline-none transition duration-300">
            </div>

            <!-- Age Field -->
            <div>
                <label for="age" class="block text-sm font-medium text-gray-400">Age</label>
                <input type="number" id="age" name="age" required
                    class="mt-1 w-full px-4 py-3 bg-gray-700 text-gray-100 rounded-lg border-2 border-gray-600 focus:ring-2 focus:ring-blue-500 focus:outline-none transition duration-300">
            </div>

            <!-- Submit Button -->
            <div>
                <button type="submit"
                    class="w-full py-3 bg-gradient-to-r from-purple-600 to-blue-500 text-gray-100 font-semibold rounded-lg shadow-md hover:shadow-xl transition duration-300 hover:from-purple-700 hover:to-blue-600 focus:outline-none focus:ring-4 focus:ring-purple-500 focus:ring-opacity-50">
                    Register
                </button>
            </div>
        </form>

        <!-- Divider -->
        <div class="mt-6 flex items-center justify-center">
            <div class="w-full border-t border-gray-600"></div>
            <span class="px-3 text-gray-400">OR</span>
            <div class="w-full border-t border-gray-600"></div>
        </div>

        <!-- Sign In Link -->
        <p class="mt-6 text-center text-gray-400">
            Already have an account? <a href="/login" class="text-blue-500 hover:text-blue-400 transition duration-200">Sign
                in</a>
        </p>
    </div>

    <!-- Additional Vibrant Moving Shapes -->
    <div class="absolute bottom-10 left-40 w-36 h-36 bg-gradient-to-r from-teal-400 via-blue-400 to-purple-500 opacity-40 rounded-full moving"></div>
    <div class="absolute top-5 right-40 w-28 h-28 bg-gradient-to-r from-red-500 via-yellow-500 to-pink-500 opacity-40 rounded-full moving animation-delay-1"></div>
</body>

</html>
